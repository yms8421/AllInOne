@{
    ViewData["Title"] = "Index";
}

<h2>Kategori Yönetimi</h2>
<div id="categoryContainer">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="form-group">
                <label>Kategori Adı</label>
                <input type="text" class="form-control" v-model="name" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="form-group">
                <label>Alt Kategori</label>
                <div class="input-group">
                    <input type="text" v-model="subName" class="form-control" />
                    <span class="input-group-append">
                        <button class="btn btn-primary" @@click="addSub">Ekle</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="row" v-if="subCategories.length > 0">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>Alt Kategori</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="sc in subCategories">
                        <td>{{sc}}</td>
                        <td>
                            <button class="btn btn-xs btn-danger" @@click="removeSub(sc)">
                                <span class="fa fa-trash"></span> Sil
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row" v-else>
        <div class="col-md-6">
            <div class="alert alert-warning">Henüz hiç alt kategori eklemediniz</div>
        </div>
    </div>
    <div>
        <button class="btn btn-primary" @@click="save">Kaydet</button>
    </div>
</div>

@section pagescript {
    <script src="~/pageScripts/productivity/category/new.js"></script>
}