@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Perque Admin Site - Giriş Yap</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="http://cdn.perque.com/css/fontawesome-all.min.css" rel="stylesheet">

    <link href="~/css/toastr.min.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <script src="http://cdn.perque.com/js/vue.js"></script>
    <script src="http://cdn.perque.com/js/axios.min.js"></script> @*Ajax istekleri için*@

</head>

<body class="gray-bg">

    <div class="loginColumns animated fadeInDown">
        <div class="row">

            <div class="col-md-6">
                <h2 class="font-bold">Perque Admin Sİtesine Hoşgeldiniz</h2>
            </div>
            <div class="col-md-6">
                <div class="ibox-content">
                    <form class="m-t" role="form" id="loginForm">
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="kullanıcı adı" required="" v-model="username">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="parola" required="" v-model="password">
                        </div>
                        <button type="button" class="btn btn-primary block full-width m-b" @@click="send">Giriş Yap</button>

                        <a href="#">
                            <small>Parolamı unuttum</small>
                        </a>
                    </form>
                    <p class="m-t">
                        <small>Perque Inc &copy; 2019</small>
                    </p>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                BilgeAdam
            </div>
            <div class="col-md-6 text-right">
                <small>© 2010-2019</small>
            </div>
        </div>
    </div>
    <script src="http://cdn.perque.com/js/perque/perque.js"></script>
    <script src="http://cdn.perque.com/js/perque/ajax.js"></script>
    <script src="~/pageScripts/account/index.js"></script>
</body>

</html>
